<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/myPlantsFragment">
    <fragment
        android:id="@+id/myPlantsFragment"
        android:name="com.goranatos.plantskeeper.ui.home.MyPlantsFragment"
        tools:layout="@layout/fragment_my_plants"
        android:label="MyPlantsFragment" >
        <action
            android:id="@+id/action_myPlantsFragment_to_addNewPlant"
            app:destination="@id/addNewPlant" />
        <action
            android:id="@+id/action_myPlantsFragment_to_plantInfo"
            app:destination="@id/plantInfo" />
    </fragment>
    <fragment
        android:id="@+id/addNewPlant"
        android:name="com.goranatos.plantskeeper.ui.home.newPlant.AddNewPlant"
        android:label="fragment_add_new_plant"
        tools:layout="@layout/fragment_add_new_plant" />

    <fragment
        tools:layout="@layout/fragment_plant_info"
        android:id="@+id/plantInfo"
        android:name="com.goranatos.plantskeeper.ui.home.plantInfo.PlantInfo"
        android:label="PlantInfo" >
        <argument
            android:name="plant_id_in_database"
            app:nullable="false"
            app:argType="integer" />
    </fragment>


</navigation>