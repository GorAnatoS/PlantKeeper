<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconTint">?attr/onlyIconButton</item>

    </style>

    <style name="Theme.PlantKeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreenTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.PlantKeeper.ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="PlantKeeper.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PlantKeeper.Chip.Choice</item>
    </style>

    <style name="ThemeOverlay.PlantKeeper.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">?attr/snackBarBackground</item>
        <item name="backgroundOverlayColorAlpha">1</item>

    </style>

    <style name="MySnackBarTextViewStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?attr/onSnackBarBackground</item>
    </style>

</resources>