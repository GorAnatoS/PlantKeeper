<resources>
    <!-- Base application theme. -->


    <style name="Theme.PlantKeeper.ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/on_primary</item>
    </style>

    <style name="Theme.PlantKeeper.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/on_primary</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_state_list</item>
        <item name="android:textColor">@color/chip_text_color_state_list</item>
    </style>

    <style name="Theme.PlantKeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PlantKeeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="iconTint">@color/on_primary</item>
        <item name="colorControlNormal">@color/on_primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="Theme.PlantKeeper.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.PlantKeeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.PlantKeeper.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        ...
        <item name="materialThemeOverlay">@style/ThemeOverlay.PlantKeeper.Chip.Choice</item>
    </style>

    <style name="ThemeOverlay.PlantKeeper.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>
</resources>

