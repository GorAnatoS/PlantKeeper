<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlantKeeper" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <item name="backgroundColor">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <item name="colorAccent">@color/secondary_variant</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionOverflowButtonStyle">@style/Theme.PlantKeeper.ActionOverflowButtonStyle
        </item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="toolbarStyle">@style/Theme.PlantKeeper.Toolbar</item>

        <item name="android:textColor">@color/black_87_opacity</item>
        <item name="android:editTextColor">@color/black_87_opacity</item>
    </style>

    <style name="Theme.PlantKeeper.ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/on_primary</item>
    </style>

    <style name="Theme.PlantKeeper.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/on_primary</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_state_list</item>
        <item name="android:textColor">@color/chip_text_color_state_list</item>
    </style>

    <style name="Theme.PlantKeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PlantKeeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="iconTint">@color/on_primary</item>
        <item name="colorControlNormal">@color/on_primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="Theme.PlantKeeper.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.PlantKeeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

