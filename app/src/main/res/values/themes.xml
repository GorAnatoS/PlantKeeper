<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.PlantKeeper" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/green_900</item>
        <item name="colorPrimaryVariant">@color/green_900_dark</item>
        <item name="colorOnPrimary">@color/white_87_opacity</item>

        <item name="colorSecondary">@color/amber_700</item>
        <item name="colorSecondaryVariant">@color/amber_700_dark</item>
        <item name="colorOnSecondary">@color/black_87_opacity</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/black_87_opacity</item>
        <item name="android:colorBackground">@color/green_900_5_on_white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black_87_opacity</item>

        <item name="colorAccent">@color/amber_700_dark</item>

        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white_87_opacity</item>

        <item name="dialogBackgroundColor">?attr/backgroundColor</item>

        <item name="chip_background_unchecked">@color/blue_grey_100</item>
        <item name="on_chip_background_unchecked">@color/black_87_opacity</item>
        <item name="chip_background_checked">@color/amber_700_dark</item>
        <item name="on_chip_background_checked">@color/black_87_opacity</item>

        <item name="appBarIcon">@color/white_87_opacity</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="actionOverflowButtonStyle">@style/Theme.PlantKeeper.ActionOverflowButtonStyle
        </item>

        <item name="card_view_bg_normal">?attr/colorSurface</item>
        <item name="card_view_bg_need_care">@color/amber_700_18</item>

        <item name="onlyIconButton">#99000000</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:textColor">@color/black_87_opacity</item>
        <item name="android:editTextColor">@color/black_87_opacity</item>

        <item name="onTopAppBar">@color/white_87_opacity</item>

        <item name="colorButtonNormal">@color/white_87_opacity</item>

        <item name="snackBarBackground">@color/green_900_dark</item>
        <item name="onSnackBarBackground">@color/white_87_opacity</item>

        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/MySnackBarTextViewStyle</item>

        <item name="topAppBar">?attr/colorPrimary</item>
        <item name="bottomNavigationBar">?attr/colorPrimary</item>
        <item name="onBottomNavigationBar">?attr/colorOnPrimary</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>


</resources>