<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlantsKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amazon_primary_light</item>
        <item name="colorPrimaryVariant">@color/amazon_primary_dark</item>
        <item name="colorOnPrimary">@color/amazon_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amazon_secondary_light</item>
        <item name="colorSecondaryVariant">@color/amazon_secondary_dark</item>
        <item name="colorOnSecondary">@color/amazon_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_state_list</item>
        <item name="android:textColor">@color/chip_text_color_state_list</item>
    </style>

    <style name="Theme.PlantsKeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PlantsKeeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PlantsKeeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>