<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/waterGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="?listPreferredItemHeightSmall"
        app:layout_constraintStart_toStartOf="@+id/switchWater"
        app:layout_constraintTop_toBottomOf="@+id/switchWater">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Настройка полива"
            app:layout_constraintBottom_toBottomOf="@+id/switchHibernate"
            app:layout_constraintEnd_toStartOf="@+id/switchHibernate"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/switchHibernate" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchHibernate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:checked="true"
            android:drawableStart="@drawable/ic_baseline_ac_unit_24"
            android:gravity="center"
            android:text=" период покоя"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvTitle"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvToStartWaterFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Следующий полив"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/switchHibernate" />

        <TextView
            android:id="@+id/tvToWaterFromDateVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="01.10"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:visibility="visible"
            app:drawableStartCompat="@drawable/ic_baseline_play_arrow_24"
            app:layout_constraintBottom_toBottomOf="@+id/tvToStartWaterFrom"
            app:layout_constraintStart_toEndOf="@+id/tvToStartWaterFrom"
            app:layout_constraintTop_toTopOf="@+id/tvToStartWaterFrom" />


        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_watering_normal_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="textViewToWaterOnce, editTextNumberSignedDays, textViewDays" />

        <TextView
            android:id="@+id/textViewToWaterOnce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Поливать один раз в "
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumberSignedDays"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/tvToStartWaterFrom"
            app:layout_constraintTop_toTopOf="@+id/editTextNumberSignedDays" />


        <EditText
            android:id="@+id/editTextNumberSignedDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:ems="3"
            android:gravity="center"
            android:hint="2"
            android:inputType="numberSigned"
            app:layout_constraintStart_toEndOf="@+id/textViewToWaterOnce"
            app:layout_constraintTop_toBottomOf="@+id/tvToWaterFromDateVal" />

        <TextView
            android:id="@+id/textViewDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="дня"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumberSignedDays"
            app:layout_constraintStart_toEndOf="@+id/editTextNumberSignedDays"
            app:layout_constraintTop_toTopOf="@+id/editTextNumberSignedDays" />


        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_watering_in_hibernate_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="textViewToWaterOnceHibernate, editTextNumberSignedDaysHibernate, textViewDaysHibernate" />


        <TextView
            android:id="@+id/textViewToWaterOnceHibernate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_ac_unit_24"
            android:gravity="center"
            android:text=" Поливать один раз в "
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumberSignedDaysHibernate"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/tvToStartWaterFrom"
            app:layout_constraintTop_toTopOf="@+id/editTextNumberSignedDaysHibernate" />

        <EditText
            android:id="@+id/editTextNumberSignedDaysHibernate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:ems="3"
            android:gravity="center"
            android:hint="2"
            android:inputType="numberSigned"
            app:layout_constraintStart_toEndOf="@+id/textViewToWaterOnceHibernate"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumberSignedDays" />

        <TextView
            android:id="@+id/textViewDaysHibernate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="дня"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNumberSignedDaysHibernate"
            app:layout_constraintStart_toEndOf="@+id/editTextNumberSignedDaysHibernate"
            app:layout_constraintTop_toTopOf="@+id/editTextNumberSignedDaysHibernate" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/cancel"
            app:layout_constraintBottom_toBottomOf="@+id/button_save"
            app:layout_constraintEnd_toStartOf="@+id/button_save"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_save" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_cancel"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumberSignedDaysHibernate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>